<div class="jumbotron py-4 mb-5">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-7">
        <div>
          <h3><%= data.title %> <span class="badge badge-primary"><%= data.requestType %></span></h3>
          <p><%- data.description%></p>

          <small class="text-muted">URL complet :</small>
          <br />
          <code><%= data.urls.full %></code>
          <br />
          <% if (data.urls.examples.length > 1) { %>
            <small class="text-muted">Exemples d'URL :</small>
          <% } else { %>
            <small class="text-muted">Exemple d'URL :</small>
          <% } %>
          <br />
          <code>
            <% for (const ex of data.urls.examples) { %>
              <%= ex %>
              <br />
            <% } %>
          </code>
        </div>
        <div class="mt-2">
          <strong>Paramètres :</strong>
          <ul class="mt-1">
            <% for (const param of data.params) { %>
              <li><code><%= param.name %></code>&nbsp;: <%- param.desc %></li>
            <% } %>
          </ul>
        </div>
      </div>
      <div class="col-xl-5">
        <nav>
          <div class="nav nav-pills" id="nav-tab-langs" role="tablist">
            <a class="nav-item nav-link active" id="code-<%= identifier %>-js-tab" data-toggle="tab" href="#code-<%= identifier %>-js"
              role="tab" aria-controls="code-<%= identifier %>-js" aria-selected="true">Node JS</a>
            <a class="nav-item nav-link" id="code-<%= identifier %>-jq-tab" data-toggle="tab" href="#code-<%= identifier %>-jq"
              role="tab" aria-controls="code-<%= identifier %>-jq" aria-selected="true">jQuery</a>
            <a class="nav-item nav-link" id="code-<%= identifier %>-php-tab" data-toggle="tab" href="#code-<%= identifier %>-php"
              role="tab" aria-controls="code-<%= identifier %>-php" aria-selected="true">PHP</a>
            <a class="nav-item nav-link" id="code-<%= identifier %>-py-tab" data-toggle="tab" href="#code-<%= identifier %>-py" role="tab"
              aria-controls="code-<%= identifier %>-py" aria-selected="true">Python</a>
            <a class="nav-item nav-link" id="code-<%= identifier %>-result-tab" data-toggle="tab" href="#code-<%= identifier %>-result"
              role="tab" aria-controls="code-<%= identifier %>-result" aria-selected="true">Résultat</a>
          </div>
        </nav>

        <div class="tab-content" id="<%= identifier %>-code-tabcontent">
          <div class="tab-pane active" id="code-<%= identifier %>-js" role="tabpanel" aria-labelledby="code-<%= identifier %>-js-tab">
            <pre class="rounded">
<code class="language-js line-numbers">
import axios from 'axios';
      
axios('<%= data.urls.examples[0] %>')
  .then(response => console.log(response))
  .catch(err => console.error(err));
</code>
              </pre>
          </div>
          <div class="tab-pane" id="code-<%= identifier %>-jq" role="tabpanel" aria-labelledby="code-<%= identifier %>-jq-tab">
            <pre class="rounded">
<code class="language-js line-numbers">
$.get( "<%= data.urls.examples[0] %>",
  function( data ) {
    console.log( data );
  }, "json" );
</code>
              </pre>
          </div>
          <div class="tab-pane" id="code-<%= identifier %>-php" role="tabpanel" aria-labelledby="code-<%= identifier %>-php-tab">
            <pre class="rounded">
<code class="language-php line-numbers">
$json = file_get_contents('<%= data.urls.examples[0] %>');
$obj = json_decode($json);
          
echo $obj;
</code>
              </pre>
          </div>
          <div class="tab-pane" id="code-<%= identifier %>-py" role="tabpanel" aria-labelledby="code-<%= identifier %>-py-tab">
            <pre class="rounded">
<code class="language-py line-numbers">
import requests
      
r = requests.get("<%= data.urls.examples[0] %>")
print(r.json)
</code>
              </pre>
          </div>
          <div class="tab-pane" id="code-<%= identifier %>-result" role="tabpanel" aria-labelledby="code-<%= identifier %>-result-tab">
            <pre class="rounded">
<code class="language-json">
<%= data.result %>
</code>
              </pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
